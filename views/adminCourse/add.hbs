<form action="" method="post">
  <div class="card shadow w-50 mx-auto">
    <div class="card-header">
      Add Course
    </div>
    <div class="card-body">
      <div class="form-group">
        <label for="txtName">Name</label>
        <input type="text" class="form-control" id="txtName" name="name" autofocus>
      </div>
      <div class="form-group">
        <label for="txtCategoryID">Category ID</label>
        <select class="form-control" name="categoryId" id="txtCategoryID">
          {{#each categoryList}}
            <option value=""></option>
            <option value={{id}}>{{name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label for="txtLecturerID">Lecturer ID</label>
        <select class="form-control" name="userId" id="txtLecturerID">
          {{#each lecturerList}}
            <option value=""></option>
            <option value={{id}}>{{name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label for="numPrice">Price</label>
        <input type="number" class="form-control" id="numPrice" name="price" min="0">
      </div>
      <div class="form-group">
        <label for="txtBriefContent">Brief content</label>
        <textarea class="form-control" id="txtBriefContent" name="briefContent" rows="4" cols="50"></textarea>
      </div>
      <div class="form-group">
        <label for="txtDetailedContent">Detailed content</label>
        <textarea class="form-control" id="txtDetailedContent" name="detailedContent" rows="4" cols="50"></textarea>
      </div>
    </div>
    <div class="card-footer text-muted">
      <a class="btn btn-primary" href="/admin/course" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        Back to List
      </a>
      <button type="submit" class="btn btn-outline-success">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </div>
  </div>
</form>