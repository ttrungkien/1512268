<form action="" method="post">
  <div class="card shadow w-50 mx-auto">
    <div class="card-header">
      Edit Profile
    </div>
    <div class="card-body">
      <input type="hidden" name="id" value="{{authUser.id}}">
      <div class="form-group">
        <label for="txtName">Name</label>
        <input type="text" class="form-control" id="txtName" name="name" value="{{authUser.name}}" autofocus>
      </div>
      <div class="form-group">
        <label for="txtEmail">Email</label>
        <input type="text" class="form-control" id="txtEmail" name="email" value="{{authUser.email}}">
      </div>
    </div>
    <div class="card-footer text-muted">
      <a class="btn btn-primary" href="/account/profile" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        Back to Profile
      </a>
      <button type="submit" class="btn btn-outline-success" formaction="/account/edit">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </div>
  </div>
</form>