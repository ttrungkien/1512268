<form action="" method="post">
  <div class="card shadow w-50 mx-auto">
    <div class="card-header">
      Change Password
    </div>
    <div class="card-body">
      <input type="hidden" name="id" value="{{authUser.id}}">
      <div class="form-group">
        <label for="txtOldPassword">Old Password</label>
        <input type="password" class="form-control" id="txtOldPassword" name="oldPassword">
      </div>
      <div class="form-group">
        <label for="txtNewPassword">New Password</label>
        <input type="password" class="form-control" id="txtNewPassword" name="newPassword">
      </div>
      <div class="form-group">
        <label for="txtConfirm">Confirm</label>
        <input type="password" class="form-control" id="txtConfirm">
      </div>
    </div>
    <div class="card-footer text-muted">
      <a class="btn btn-primary" href="/account/profile" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        Back to Profile
      </a>
      <button type="submit" class="btn btn-outline-success" formaction="/account/change-password">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </div>
  </div>
</form>