<div class="card">
  <div class="card-header">
    Category
    <a class="btn btn-sm btn-outline-success" href="/admin/category/add" role="button">
      <i class="fa fa-plus" aria-hidden="true"></i>
      Add
    </a>
  </div>
  <div class="card-body">
    <table class="table table-striped table-inverse table-responsive">
      <thead class="thead-inverse">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>ParentID</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
          {{#each categoryList}}
            <tr>
              <td scope="row">{{id}}</td>
              <td>{{name}}</td>
              <td>{{parentId}}</td>
              <td>
                <a class="btn btn-sm btn-outline-primary" href="/admin/category/detail/{{id}}" role="button">
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                  Edit
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
    </table>
  </div>
</div>