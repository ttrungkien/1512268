<form action="" method="post">
  <div class="card shadow w-50 mx-auto">
    <div class="card-header">
      Edit Category
    </div>
    <div class="card-body">
      <div class="form-group">
        <label for="txtID">ID</label>
        <input type="text" class="form-control" id="txtID" name="id" value="{{this.category.id}}" readonly>
      </div>
      <div class="form-group">
        <label for="txtName">Name</label>
        <input type="text" class="form-control" id="txtName" name="name" value="{{this.category.name}}" autofocus>
      </div>
      <div class="form-group">
        <label for="txtParentID">ParentID</label>
        <select class="form-control" name="parentID" id="txtParentID" disabled>
          {{#each categoryList}}
            <option value=""></option>
            <option value={{id}}>{{name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="card-footer text-muted">
      <a class="btn btn-primary" href="/admin/category" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        Back to List
      </a>
      <button type="submit" class="btn btn-outline-danger" formaction="/admin/category/del">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete
      </button>
      <button type="submit" class="btn btn-outline-success" formaction="/admin/category/patch">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </div>
  </div>
</form>