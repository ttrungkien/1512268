        <div class="w3-container">
          <img src="https://www.dailylearn.in/common_dynamic/images/oc/courses/course-card4.1593419702.jpg" style="width:100%">
          <p>Mega Ripped Jeans<br><b>$19.99</b></p>
        </div>
      </div>

      <div class="w3-col l3 s6">
        <div class="w3-container">
          <div class="w3-display-container">
            <img src="https://www.dailylearn.in/common_dynamic/images/oc/courses/course-card4.1593419702.jpg" style="width:100%">
            {{!-- <span class="w3-tag w3-display-topleft">New</span> --}}
            <div class="w3-display-middle w3-display-hover">
              <button class="w3-button w3-black">Buy now <i class="fa fa-shopping-cart"></i></button>
            </div>
          </div>
          <p>Mega Ripped Jeans<br><b>$19.99</b></p>
        </div>
        <div class="w3-container">
          <img src="https://www.dailylearn.in/common_dynamic/images/oc/courses/course-card4.1593419702.jpg" style="width:100%">
          <p>Washed Skinny Jeans<br><b>$20.50</b></p>
        </div>
      </div>

      <div class="w3-col l3 s6">
        <div class="w3-container">
          <img src="https://www.dailylearn.in/common_dynamic/images/oc/courses/course-card4.1593419702.jpg" style="width:100%">
          <p>Washed Skinny Jeans<br><b>$20.50</b></p>
        </div>
        <div class="w3-container">
          <div class="w3-display-container">
            <img src="https://www.dailylearn.in/common_dynamic/images/oc/courses/course-card4.1593419702.jpg" style="width:100%">
            {{!-- <span class="w3-tag w3-display-topleft">Sale</span> --}}
            <div class="w3-display-middle w3-display-hover">
              <button class="w3-button w3-black">Buy now <i class="fa fa-shopping-cart"></i></button>
            </div>
          </div>
          <p>Vintage Skinny Jeans<br><b class="w3-text-red">$14.99</b></p>
        </div>
      </div>

      <div class="w3-col l3 s6">
        <div class="w3-container">
          <img src="https://www.dailylearn.in/common_dynamic/images/oc/courses/course-card4.1593419702.jpg" style="width:100%">
          <p>Vintage Skinny Jeans<br><b>$14.99</b></p>
        </div>
        <div class="w3-container">
          <img src="https://www.dailylearn.in/common_dynamic/images/oc/courses/course-card4.1593419702.jpg" style="width:100%">
          <p>Ripped Skinny Jeans<br><b>$24.99</b></p>
        </div>
      </div>
    </div>
  </div>

  {{#each courseList}}
    <div class="card">
      <div class="card-header">
        {{name}}
      </div>
      <div class="card-body">
        <h4 class="card-title">{{briefContent}}</h4>
      </div>
      <div class="card-footer text-muted">
        {{price}}
        <a class="btn btn-sm btn-outline-primary" href="/course/detail/{{id}}" role="button">
          <i class="fa fa-eye" aria-hidden="true"></i>
          View detail
        </a>
      </div>
    </div>
  {{/each}}
</div>