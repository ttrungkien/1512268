{{#section 'js'}}
  <script>
    // Accordion 
    function myAccFunc(categoryId) {
      var x = document.getElementById(categoryId);
      if (x.className.indexOf("w3-show") == -1) {
        x.className += " w3-show";
      } else {
        x.className = x.className.replace(" w3-show", "");
      }
    }

  </script>
{{/section}}

<div>
  <!-- Sidebar/menu -->
  <nav class="w3-sidebar w3-bar-block w3-white w3-collapse w3-top" style="width:250px;margin-top:70px" id="mySidebar">
    <div class="w3-container w3-display-container w3-padding-16">
      <i onclick="w3_close()" class="fa fa-remove w3-hide-large w3-button w3-display-topright"></i>
      <h3 class="w3-wide"><b>CATEGORY</b></h3>
    </div>
    <div class="w3-padding-64 w3-large w3-text-grey" style="font-weight:bold">
      {{#each categoryList}}
        {{#if hasChildren}}
          <a onclick="myAccFunc({{id}})" href="javascript:void(0)" class="w3-button w3-block w3-white w3-left-align" id="myBtn">
            {{name}} <i class="fa fa-caret-down"></i>
          </a>
          <div id="{{id}}" class="w3-bar-block w3-hide w3-padding-large w3-medium">
            {{#each children}}
              <a href="#" class="w3-bar-item w3-button">{{name}}</a>
            {{/each}}
          </div>
        {{else}}
          <a href="#" class="w3-bar-item w3-button">{{name}}</a>
        {{/if}}
      {{/each}}
    </div>
  </nav>

  <div class="w3-main" style="margin-left:250px">
    <!-- Product grid -->
    <div class="w3-row w3-grayscale">
      {{#each courseList}}
        <div class="w3-col l3 s6">
          <div class="w3-container">
            <div class="w3-display-container">
              <img src="https://www.dailylearn.in/common_dynamic/images/oc/courses/course-card4.1593419702.jpg" style="width:100%">
              <span class="w3-tag w3-display-topleft">New</span>
              <div class="w3-display-middle w3-display-hover">
                <button class="w3-button w3-black">Register now <i class="fa fa-shopping-cart"></i></button>
              </div>
            </div>
            <p>{{name}}<br><b>{{price}}</b></p>
            <a class="btn btn-sm btn-outline-primary" href="/course/detail/{{id}}" role="button">
              <i class="fa fa-eye" aria-hidden="true"></i>
              View detail
            </a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>